{% extends 'base.html.twig' %}

{% block body %}

<form method="post" action="{{ path_for('create') }}">
    <legend><h1><a href="">Créer un article</a></h1></legend>
        <div class="form-group">
            <input type="text" name="libelle" class="form-control" placeholder="Libellé">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="prix"  placeholder="Prix">
        </div>
