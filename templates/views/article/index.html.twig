{% extends "base.html.twig" %}

{% block body %}
<legend><h1><a href="">Liste des articles</a></h1></legend>

{% for article in articles %}
<table class="table table-bordered table-striped table-condensed">
   <thead class="thead thead-inverse">
        <tr>
            <th>Libell√©</th>
            <th>Prix</th>
            <th>Categorie</th>
            <th>supprimer</th>
            <th>Modifier</th>
            <th>Voir</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th> {{ article.libelle }} </th>
            <th>{{ article.prix }}</th>
            <th>{{ article.categorie }}</th>
            <th><form action="{{ path_for('remove', { 'id': article.id }) }}" method="post">
                    <input type="hidden" name="_METHOD" value="DELETE"/>
                    <button class="btn btn-danger">supprimer</button></form></th>
            <th><a href="{{ path_for('edit', {'id': article.id}) }}" class="btn btn-info">Modifier</a><span class="glyphicon glyphicon-pencil"></span></th>
            <th><a href="{{ path_for('show', {'id': article.id}) }}" class="btn btn-info">Voir</a><span class="glyphicon glyphicon-pencil"></span></th>
        </tr>
    </tbody>
</table>

{% endfor %}
{% endblock %}